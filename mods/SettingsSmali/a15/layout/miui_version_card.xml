<?xml version='1.0' encoding='utf-8' ?>
<FrameLayout android:id="@id/version_layout"
             android:clipToPadding="false"
             android:layout_width="match_parent"
             android:layout_height="150.0dp"
             android:layout_marginHorizontal="12.0dp"
             android:layout_marginVertical="16.0dp" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <ImageView android:id="@id/miui_logo_view"
             android:visibility="gone"
             android:layout_width="0.0dp"
             android:layout_height="0.0dp"
             android:alpha="0.0" />
  <androidx.cardview.widget.CardView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/my_device_info_item_background_color"
                        app:cardCornerRadius="20.0dp"
                        app:cardElevation="0.0dp">
    <com.kashi.settings.view.BlurBackgroundImageView android:gravity="center"
                          android:orientation="vertical"
                          android:id="@id/device_info_wallpaper_blur_bg"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:foreground="#44000000"
                          android:scaleType="centerCrop"
                          android:elevation="0.0dp" />
    <LinearLayout android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:clipToPadding="false"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:baselineAligned="false"
                  android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                  android:paddingEnd="?android:attr/listPreferredItemPaddingEnd">
      <LinearLayout android:orientation="vertical"
                    android:paddingTop="16.0dp"
                    android:paddingBottom="16.0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1.5dp"
                    android:layout_weight="1.0"
                    android:layout_marginStart="-2.0dp">
        <com.kashi.settings.view.SpecsTextView android:textSize="34.0sp"
                              android:textStyle="bold"
                              android:textColor="@android:color/system_accent1_50"
                              android:ellipsize="marquee"
                              android:id="@id/about_phone_rom_name_info"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="HyperOS"
                              android:singleLine="true"
                              android:fontFamily="@android:string/config_headlineFontFeatureSettings" />
        <com.kashi.settings.view.SpecsTextView android:textSize="16.0sp"
                              android:textColor="@android:color/system_accent1_50"
                              android:id="@id/device_name_in_banner"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Xiaomi Pad 5 Pro"
                              android:singleLine="true"
                              android:layout_below="@id/about_phone_rom_name_info"
                              android:layout_alignStart="@id/about_phone_rom_name_info" />
        <com.kashi.settings.view.SpecsTextView android:textSize="11.0sp"
                              android:textColor="#66ffffff"
                              android:id="@id/about_phone_rom_name_info"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="灵 感 一 触 即 发"
                              android:singleLine="true"
                              android:layout_below="@id/about_phone_rom_name_info"
                              android:layout_alignStart="@id/about_phone_rom_name_info" />
      </LinearLayout>
      <FrameLayout android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="3.0dp">
        <com.google.android.material.card.MaterialCardView android:layout_width="100.0dp"
                              android:layout_height="150.0dp"
                              android:layout_marginTop="18.0dp"
                              app:cardCornerRadius="14.0dp"
                              app:cardElevation="0.0dp"
                              app:strokeColor="#ccffffff"
                              app:strokeWidth="3.0dp">
          <com.kashi.settings.view.WallpaperView android:gravity="bottom"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:foreground="#44000000"
                                android:scaleType="centerCrop"
                                android:elevation="0.0dp" />
          <com.kashi.settings.view.SpecsTextView android:textSize="11.0sp"
                                android:textColor="@android:color/system_accent1_50"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@id/miui_version_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true" />
          <miuix.cardview.HyperCardView android:layout_gravity="bottom|center"
                                android:id="@id/update_hint_text"
                                android:layout_width="50.0dp"
                                android:layout_height="20.0dp"
                                android:layout_marginBottom="25.0dp"
                                android:alpha="0.0"
                                style="@style/MyCardView.Border">
            <TextView android:textSize="10.0dp"
                      android:textStyle="bold"
                      android:textColor="@color/my_device_update_text"
                      android:layout_gravity="center"
                      android:scrollbars="none"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/device_miui_version_update"
                      android:fontFamily="@string/miuix_font_style_misans_demibold_font_family" />
          </miuix.cardview.HyperCardView>
        </com.google.android.material.card.MaterialCardView>
      </FrameLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</FrameLayout>